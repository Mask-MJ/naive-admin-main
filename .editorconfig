root = true
# 表示所有文件适用
[*]
# 设置文件字符集为 utf-8
charset=utf-8
# 控制换行类型(lf | cr | crlf)
end_of_line=lf
# 始终在文件末尾插入一个新行
insert_final_newline=true
# 缩进风格（tab | space）
indent_style=space
# 缩进大小
indent_size=2
# 最大行长度
max_line_length = 100

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2
# 表示仅对 md 文件适用以下规则
[*.md] 
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
